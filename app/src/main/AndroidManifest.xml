<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.educatey.learnhub">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnHub">
        <activity android:name=".views.activities.SettingsActivity"></activity>
        <activity android:name=".views.activities.AddQuizActivity" />
        <activity android:name=".views.activities.DoneActivity" />
        <activity android:name=".views.activities.QuizActivity" />
        <activity android:name=".views.activities.ScoreDetailActivity" />
        <activity android:name=".views.activities.PlayingActivity" />
        <activity android:name=".views.activities.StartActivity" />
        <activity android:name=".views.activities.ChatActivity" />
        <activity android:name=".views.activities.ChatroomActivity" />
        <activity android:name=".views.activities.DownloadActivity" />
        <activity android:name=".views.activities.ClassroomActivity" />
        <activity
            android:name=".views.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.activities.HomeActivity" />
    </application>

</manifest>